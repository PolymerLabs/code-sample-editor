{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "target": "esnext",
    "module": "esNext",
    "lib": [
      "ES2017",
      "DOM"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "outDir": ".",
    "rootDir": "src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts",
    "src/lib/worker-api.ts",
    "src/shared/util.ts"
  ],
  "exclude": [
    "src/service-worker",
    "src/shared",
    "src/typescript-worker"
  ],
  "references": [
    {
      "path": "src/service-worker"
    },
    {
      "path": "src/shared"
    },
    {
      "path": "src/typescript-worker"
    }
  ]
}
